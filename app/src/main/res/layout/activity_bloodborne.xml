<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameOverScreen"
    android:background="#4f4f4f">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/CongratsMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="You died. Game over!"
            android:textColor="#eaeaea"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/playerName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#eaeaea"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/playerWeaponName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#eaeaea"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/displayStrength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#eaeaea"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/displayAccuracy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#eaeaea"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/displayDefense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#eaeaea"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/displayAgility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#eaeaea"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/displayIntelligence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#eaeaea"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/displayMagic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#eaeaea"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/displayLuck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#eaeaea"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/enemiesDefeated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#eaeaea"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/secretsFound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#eaeaea"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <Button
            android:id="@+id/gameOverPlayAgainSameStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/color_button"
            android:text="restart dungeon"
            android:textColor="#eaeaea" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <Button
            android:id="@+id/gameOverPlayAgain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/color_button"
            android:text="restart game"
            android:textColor="#eaeaea" />

    </LinearLayout>
</ScrollView>