<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpellSelection">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="162dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Spells:"
            android:textColor="#37C53C"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/spellOneDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(No spell equipped)"
            android:textSize="18sp" />

        <Button
            android:id="@+id/activateSpellOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spell 1"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/spellTwoDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(No spell equipped)"
            android:textSize="18sp" />

        <Button
            android:id="@+id/activateSpellTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spell 2"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/spellThreeDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(No spell equipped)"
            android:textSize="18sp" />

        <Button
            android:id="@+id/activateSpellThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spell 3"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/spellFourDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(No spell equipped)"
            android:textSize="18sp" />

        <Button
            android:id="@+id/activateSpellFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spell 4"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/spellFiveDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(No spell equipped)"
            android:textSize="18sp" />

        <Button
            android:id="@+id/activateSpellFive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spell 5"
            android:textSize="18sp"
            android:typeface="normal" />

        <TextView
            android:id="@+id/spellSixDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(No spell equipped)"
            android:textSize="18sp" />

        <Button
            android:id="@+id/activateSpellSix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spell 6"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/spellSevenDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(No spell equipped)"
            android:textSize="18sp" />

        <Button
            android:id="@+id/activateSpellSeven"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spell 7"
            android:textSize="18sp" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@android:string/cancel"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>